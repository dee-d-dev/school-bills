generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
 id Int @id @default(autoincrement())
 matric_no String? @unique
 first_name String
 last_name String
 faculty String?
 department String?
 role String @default("student")
 email String @unique
 password String
 created_at DateTime @default(now())
 updated_at DateTime @updatedAt
}

model Bill {
  id Int @id @default(autoincrement())
  admin_id String
  amount Float
  title String
  account_no String
  bank_name String
  faculty String?
  department String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

